@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}
<h2 class="mb-2">Start your journey</h2>
<h5 class="mb-4">Sign In to The App</h5>

<form method="post">
    <div class="mb-3">
        <label class="form-label">E-mail</label>
        <input type="email" name="email" class="form-control" placeholder="test@example.com" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" name="password" class="form-control" placeholder="••••••••" required />
    </div>
    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" id="remember" />
        <label class="form-check-label" for="remember">Remember me</label>
    </div>
    <button type="submit" class="btn btn-primary w-100">Sign In</button>
</form>

<div class="mt-3 d-flex justify-content-between">
    <a href="/Account/Register">Don't have an account? Sign up</a>
    <a href="#">Forgot password?</a>
</div>

