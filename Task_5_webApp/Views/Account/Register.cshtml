@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
}
<h5 class="mb-2 opacity-50 fs-4">Join us today</h5>
<h2 class="mb-4">Create your account</h2>

<form method="post">
    <!-- Name -->
    <div class="form-floating mb-3 position-relative">
        <input type="text" class="form-control pe-5" id="fname" name="fname" placeholder="First Name" required>
        <label for="name" class="opacity-50" >First Name</label>
        <i class="fa-solid fa-user position-absolute top-50 end-0 translate-middle-y me-3 text-muted opacity-50"></i>
    </div>
    <div class="form-floating mb-3 position-relative">
        <input type="text" class="form-control pe-5" id="lname" name="lname" placeholder="Last Name" required>
        <label for="name" class="opacity-50">Last Name</label>
        <i class="fa-solid fa-user position-absolute top-50 end-0 translate-middle-y me-3 text-muted opacity-50"></i>
    </div>

    <!-- Designation -->
    <div class="form-floating mb-3 position-relative">
        <input type="text" class="form-control pe-5" id="desgntn" name="desgntn" placeholder="Designation">
        <label for="desgntn" class="opacity-50">Designatnion</label>
        <i class="fa-solid fa-briefcase position-absolute top-50 end-0 translate-middle-y me-3 text-muted opacity-50"></i>
    </div>

    <!-- Email -->
    <div class="form-floating mb-3 position-relative">
        <input type="email" class="form-control pe-5" id="email" name="email" placeholder="you@example.com" required>
        <label for="email" class="opacity-50" >Email address</label>
        <i class="fa-solid fa-envelope position-absolute top-50 end-0 translate-middle-y me-3 text-muted opacity-50"></i>
    </div>

    <!-- Password with toggle -->
    <div class="form-floating mb-3 position-relative">
        <input type="password" class="form-control pe-5" id="password" name="password" placeholder="Password" required>
        <label for="password" class="opacity-50" >Password</label>
        <button type="button" class="btn btn-sm btn-link text-muted position-absolute top-50 end-0 translate-middle-y me-2"
                id="togglePassword" tabindex="-1">
            <i class="fa-solid fa-eye opacity-50 "></i>
        </button>
    </div>

    <button type="submit" class="btn btn-success w-100">Sign Up</button>
</form>

<div class="mt-3">
    <span>Already have an account? <a href="/Account/Login">Sign in</a></span>
</div>