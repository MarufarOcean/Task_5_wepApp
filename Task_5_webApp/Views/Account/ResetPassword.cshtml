@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reset Password";
}

<h1 class="mb-2">The App</h1>
<h5 class="mb-2 fs-4 opacity-50">Set your new password</h5>
<h2 class="mb-4">Reset Password</h2>

<form method="post">
    <input type="hidden" name="token" value="@ViewBag.Token" />

    <div class="form-floating mb-3 position-relative">
        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New password" required>
        <label for="newPassword" class="opacity-50">New Password</label>
        <button type="button" class="btn btn-sm btn-link text-muted position-absolute top-50 end-0 translate-middle-y me-2"
                data-password-toggle="true" data-password-target="newPassword"
                title="Show password" tabindex="-1">
            <i class="fa-solid fa-eye opacity-50"></i>
        </button>
    </div>

    <div class="form-floating mb-3 position-relative">
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required>
        <label for="confirmPassword" class="opacity-50">Confirm Password</label>
        <button type="button" class="btn btn-sm btn-link text-muted position-absolute top-50 end-0 translate-middle-y me-2"
                data-password-toggle="true" data-password-target="confirmPassword"
                title="Show password" tabindex="-1">
            <i class="fa-solid fa-eye opacity-50"></i>
        </button>
    </div>

    <button type="submit" class="btn btn-primary w-100 mb-3">Reset Password</button>
</form>

<div class="text-center">
    <a href="/Account/Login" class="text-decoration-none">Back to Login</a>
</div>